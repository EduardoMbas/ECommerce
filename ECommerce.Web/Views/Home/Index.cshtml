@model IEnumerable<ECommerce.Core.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<h2>Produtos</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>Pre√ßo:</strong> @product.Price.ToString("C")</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">Ver Detalhes</button>
                            <button type="button" class="btn btn-sm btn-outline-primary">Adicionar ao Carrinho</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
